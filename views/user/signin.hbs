link rel='stylesheet' href='/stylesheets/Login.css' >
<div class="jumbotron container-fluid starry" style="margin-bottom: 0px">
        <div class="container">
    <div class="row" >
    <div class="col-md-4 col-md-offset-4 regen">
    <h1>Sign In</h1>
    {{#if hasErrors}}
       <div class="alert alert-danger">
        {{#each messages}}
        <p>{{this}}</p>
        {{/each}}
        </div>
     {{/if}}
    <form action="/user/signin" method="post">
    <div class="form-group">
    <label for="email"> E-Mail</label>
    <input type="text" id="email" name="username" class="form-control">
    </div>

    <div class="form-group">
    <label for="password"> Password</label>
    <input type="password" id="password" name="password" class="form-control" autocomplete="on">
    </div>

    <button type="submit" class="btn btn-primary">Sign in</button>
    </form>
    </div>
    </div>
</div>
</div>